name = <%= themeName %>
description = <%= themeDescription %>
core = 7.x
base theme = bootstrap

; Regions
regions[navigation]     = 'Navigation'
regions[header]         = 'Top Bar'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[content]        = 'Content'
regions[sidebar_first]  = 'Primary'
regions[sidebar_second] = 'Secondary'
regions[footer]         = 'Footer'

; Stylesheets
<% if(!themeUsesLESS) { %>
stylesheets[all][] = bower_components/bootstrap-css/css/bootstrap-responsive.css
stylesheets[all][] = bower_components/bootstrap-css/css/bootstrap.css
<% } %>
stylesheets[all][] = css/style.css

;**********************************
; METHOD 1: Bootstrap Source Files
;**********************************
;
; ; Scripts
scripts[] = 'bower_components/twitter/js/bootstrap-affix.js'
scripts[] = 'bower_components/twitter/js/bootstrap-alert.js'
scripts[] = 'bower_components/twitter/js/bootstrap-button.js'
scripts[] = 'bower_components/twitter/js/bootstrap-carousel.js'
scripts[] = 'bower_components/twitter/js/bootstrap-collapse.js'
scripts[] = 'bower_components/twitter/js/bootstrap-dropdown.js'
scripts[] = 'bower_components/twitter/js/bootstrap-modal.js'
scripts[] = 'bower_components/twitter/js/bootstrap-tooltip.js'
scripts[] = 'bower_components/twitter/js/bootstrap-popover.js'
scripts[] = 'bower_components/twitter/js/bootstrap-scrollspy.js'
scripts[] = 'bower_components/twitter/js/bootstrap-transition.js'
scripts[] = 'bower_components/twitter/js/bootstrap-typeahead.js'

scripts[] = 'js/script.js'
;
; ; Settings inherited by base theme, uncomment to override.
; ;settings[toggle_name] = 0
; ;settings[toggle_search] = 1
; ; Disable the CDN as we are using our own source files.
settings[cdn_bootstrap] = 0


